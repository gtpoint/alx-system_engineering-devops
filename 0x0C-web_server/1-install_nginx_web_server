#!/usr/bin/env bash

# Update the package list to ensure we install the latest versions of packages
apt-get update

# Install nginx with the '-y' flag to automatically answer 'yes' to prompts
apt-get install -y nginx

# Create a default nginx configuration with "Hello World!" content
echo "Hello World!" > /var/www/html/index.html

# Ensure nginx is listening on port 80 by configuring the default site
cat > /etc/nginx/sites-available/default <<EOL
server {
    listen 80 default_server;
    listen [::]:80 default_server;

    root /var/www/html;
    index index.html;

    location / {
        try_files \$uri \$uri/ =404;
    }
}
EOL

# Reload nginx configuration to apply changes
service nginx reload

# Exit with a success message
echo "Nginx installed and configured. Web server is now running."

